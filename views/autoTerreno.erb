<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="stylesheets" type="text/css" href="estilos.css">
<header>
	<nav class="navbar navbar-inverse">
	    <div class="container-fluid">
	        <div class="navbar-header">
	            <a class="navbar-brand" href="/"><mark>Terreno con un Auto</mark></a>
	        </div>
	        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
	            <ul class="nav navbar-nav navbar-right">
	                <li>
	                    <h1 style='color:white'>Terreno</h1>
	                </li>
	            </ul>
	        </div>
	    </div>
	</nav>
</header>
<body>
	<center>
		<div class="jumbotron">
			<% for i in 0..$tamY-1 do %>
				<% for j in 0..$tamX-1 do %>
					<b>
						<% l=0 %>
						<% for k in 0..$cantAutosAux-1 do %>
							<% if (i == $terreno.getAuto(k).gety()) and (j == $terreno.getAuto(k).getx()) %>       
								1	
								<% l=1 %>
							<% end %>
							
						<% end %>
						<%if (l==0)%>
							0
						<% end %>
					</b>
				<% end %>
				<br/>
			<% end %>
		</div>
		<div class="jumbotron">

			<% for index in 1..$cantAutosAux.to_i %>
			<h3>Posicion actual del carro <%=index%> : </h3>
			<br/>
			<%= $terreno.getAuto(index-1).getPosition() %>
			<br/>
			<% end %>

		</div>
		<br/>
		<form method="post" action="/moveCar">

			<% for index in 1..$cantAutosAux.to_i %>
				<input type='text' class="form-control" name='movAuto<%=index%>' placeholder='Ingrese movimiento del auto <%=index%>'/>
				<br/>
			<% end %>
			<button type="submit"  class="btn btn-success" name="Mover Autos">Mover Autos</button>

        </form>
	</center>
</body>
